# along with this program.  If not, see <http://www.gnu.org/licenses/>.
#

set -m # Enable Job Control

# Path to the current directory where this script is located
DIR=$(dirname $(readlink -f "$BASH_SOURCE"))

# Include common configuration file
source "$DIR/common.sh"

# Configuration parameters
PREFIX="bt-daemon"                            # Log prefix
LOG="$CFG_LOG_DIR/$PREFIX.log"                # Main log file
WATCHDOG="$CFG_BLUETOOTH_WATCHDOG"            # Bluetooth watchdog enable flag
BIND_ONLY="$CFG_BLUETOOTH_BIND_ONLY"          # Just bind and don't spawn any serial daemons
DEAMON_SCRIPT="$DIR/../lib/serial-daemon.py"  # Script that handles a BT serial port


# Print info message to log file
function infoLog {
  _infoLog "$1" "$PREFIX" "$LOG" "ecd"
}

# Print warning message to log file
function warningLog {
  _warningLog "$1" "$PREFIX" "$LOG" "ecd"
}

# Print error message to log file
function errorLog {
  _errorLog "$1" "$PREFIX" "$LOG" "ecd"
}



# Start a serial daemon
function start {
  local device="$1"
  local address="$2"
  local justBind="$3"
  local rv=0
  local status

  if [[ ! -e "/dev/$device" ]]; then
    infoLog "Binding /dev/$device to $address"
    rfcomm bind "/dev/$device" "$address"
    rv=$?
    sleep 30
  else
    infoLog "/dev/$device already bound"
  fi

  if [[ $justBind -eq 1 ]]; then
    return
  fi

  if [[ rv -eq 0 ]]; then
    infoLog "Connecting Bluetooth device (device=/dev/$device address=$address)"
    $DEAMON_SCRIPT "$device" "$PREFIX" &
  else
    errorLog "Failed to bind Bluetooth device (device=$device address=$address)"
  fi
}


# Start a serial daemon for a BLE device
function bleStart {
  local device="$1"
  local address="$2"
  local justBind="$3"
  local rv=0
  local status

  if [[ ! -e "/dev/$device" ]]; then
    infoLog "Binding BLE /dev/$device to $address"
    python3 -m ble_serial -d "$address" -p "/dev/$device" &
    sleep 5
  fi

  if [[ -e "/dev/$device" ]]; then
    infoLog "Connecting BLE device (device=/dev/$device address=$address)"
    $DEAMON_SCRIPT "$device" "$PREFIX" &
  else
    errorLog "Failed to bind BLE device (device=$device address=$address)"
  fi
}





#################
####  START  ####
#################

infoLog "Starting bluetooth daemon"

# Loop over configurations
for i in "${!CFG_BLUETOOTH[@]}"; do
  config=(${CFG_BLUETOOTH[i]})
  device="${config[0]}"
  address="${config[1]}"
  mode="${config[2]}"
  justBind="$BIND_ONLY"
  if [[ "$mode" == "ble" ]]; then
    bleStart "$device" "$address" "$justBind"
  else
    start "$device" "$address" "$justBind"
  fi
done

if [[ "$justBind" == "bind" ]]; then
  exit 0
fi

# Loop forever until process stopped
while true; do
  if [[ $WATCHDOG == 1 ]]; then
    timeout=60
    tmpFile="/tmp/bt-daemon.tmp"
    config=(${CFG_BLUETOOTH[0]})
    device="/dev/${config[0]}"

    echo
    date

    # Run command in background
    /opt/nastia-server/bin/serial-command "$device" 9600 s 2> >(tee "$tmpFile" >&2) &
    cmdPid=$!

    # Start watchdog to kill the command after timeout
    {
      sleep "$timeout"
      kill  "$cmdPid"
    } &
    watchdogPid=$!

    wait "$cmdPid"
    rv=$?

    # Clean up watchdog
    kill "$watchdogPid" 2>/dev/null

    stderr=$(cat "$tmpFile")
    rm -f  "$tmpFile"

    if [[ rv -ne 0 ]]; then
      if [[ -z "$stderr" ]]; then
        stderr="Timeout reached while calling serial-command"
      fi
      infoLog "$stderr - restarting bluetooth"
      rm -rf /tmp/ulock-*.lock
      /etc/init.d/bluetooth restart
    fi
  fi
  sleep 370
done


